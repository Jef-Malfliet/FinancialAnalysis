<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: #ffffff;" type="VBox" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="125.0" prefWidth="350.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="310.0" spacing="10.0">
               <children>
                  <TextField fx:id="tfLocatie" prefHeight="25.0" prefWidth="245.0" />
                  <Button fx:id="btnLocatie" mnemonicParsing="false" onAction="#kiesLocatie" prefHeight="25.0" prefWidth="80.0" text="Kies locatie" />
               </children>
            </HBox>
            <TextField fx:id="tfName" promptText="Naam" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="20.0" />
         </padding>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="350.0">
         <children>
            <Label fx:id="lblFout" text="FoutTekst" textFill="RED">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
            <VBox alignment="CENTER_RIGHT" prefHeight="156.0" prefWidth="72.0" spacing="60.0">
               <children>
                  <Button fx:id="btnMaak" mnemonicParsing="false" onAction="#maakReport" text="Maak" />
                  <Button fx:id="btnTerug" mnemonicParsing="false" onAction="#goToPreviousScreen" text="&lt;- Terug" />
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</fx:root>
