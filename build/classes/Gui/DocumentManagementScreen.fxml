<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="vbScherm" alignment="CENTER_RIGHT" prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: #ffffff;" type="VBox" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="hbButtonBox" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="39.0" prefWidth="330.0" style="-fx-background-color: #ffffff;">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="228.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnKiesBestand" mnemonicParsing="false" onAction="#chooseDocument" text="Kies document(en)" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="155.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnAnalyse" mnemonicParsing="false" onAction="#makeAnalysis" text="Analyse" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="tvBestandenLijst" editable="true" prefHeight="235.0" prefWidth="330.0">
        <columns>
          <TableColumn fx:id="tcName" editable="false" maxWidth="288.0" prefWidth="288.0" resizable="false" text="Naam" />
          <TableColumn fx:id="tcSelect" maxWidth="30.0" minWidth="0.0" prefWidth="30.0" resizable="false" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="2.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#removeDocuments" text="Verwijder" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</fx:root>
